// funcao dma
uint16_t adc_data[1];
uint8_t adc_conv_complete_flag = 0;
void HAL_ADC_ConvCpltCallback(ADC_HandleTypeDef* hadc) {
    if (hadc->Instance == ADC1) { // Verifica se o callback é do ADC1
    	adc_conv_complete_flag = 1;
    }
}

