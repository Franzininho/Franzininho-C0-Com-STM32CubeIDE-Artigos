/* Private variables ---------------------------------------------------------*/

UART_HandleTypeDef huart1;
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
#define BUFFER_SIZE 256
uint8_t rxBuffer[BUFFER_SIZE];
uint8_t rxData;
uint16_t rxIndex = 0;
uint8_t txBuffer[BUFFER_SIZE];

typedef struct {
    uint8_t latitude[16];
    char lat_direction;
    uint8_t longitude[16];
    char lon_direction;
    uint8_t altitude[8];
} GPSData;

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_USART2_UART_Init(void);
static void MX_USART1_UART_Init(void);
/* USER CODE BEGIN PFP */

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */

void parseGPGGA(char* sentence, GPSData* data) {
    char* token;
    int fieldIndex = 0;

    token = strtok(sentence, ",");

    while (token != NULL) {

        switch (fieldIndex) {
            case 2:
                strncpy((char *)data->latitude, token, sizeof(data->latitude));
                break;
            case 3:
                data->lat_direction = token[0];
                break;
            case 4:
                strncpy((char *)data->longitude, token, sizeof(data->longitude));
                break;
            case 5:
                data->lon_direction = token[0];
                break;
            case 9:
                strncpy((char *)data->altitude, token, sizeof(data->altitude));
                break;
        }
        token = strtok(NULL, ",");
        fieldIndex++;
    }
}

void ProcessGPSData(char* gpsData) {
    if (strncmp(gpsData, "$GPGGA", 6) == 0) {
        GPSData data;
        parseGPGGA(gpsData, &data);

        // Formata os dados para o buffer de transmissÃ£o
        snprintf((char *)txBuffer, BUFFER_SIZE, "Latitude: %s, Longitude: %s, Altitude: %s\r\n",
                 (char *)data.latitude, (char *)data.longitude, (char *)data.altitude);
        // Transmite os dados formatados via UART
        HAL_UART_Transmit(&huart1, txBuffer, BUFFER_SIZE, 1000);
    }
}

void HAL_UART_RxCpltCallback(UART_HandleTypeDef *huart)
{
    if(huart->Instance == USART2)
    {
        if(rxIndex < BUFFER_SIZE - 1)
        {
            if(rxData != '\n') // Verifica fim de linha
            {
                rxBuffer[rxIndex++] = rxData;
            }
            else
            {
                rxBuffer[rxIndex] = '\0';
                rxIndex = 0; // Reset buffer
                ProcessGPSData((char*)rxBuffer);
            }
        }
        HAL_UART_Receive_IT(&huart2, &rxData, 1); // Substitua pelo seu handler
    }
}


